#!/usr/bin/env bash
# A script to display information about subdomains

researcher() {
    domain=$1
    subdomain=$2

    # Use dig to get the A record for the specified subdomain
    result=$(dig +short "$subdomain.$domain")

    # If result is not empty, print the result
    if [[ -n "$result" ]]; then
        echo "The subdomain $subdomain is a A record and points to $result"
    else
        echo "No record found for $subdomain.$domain"
    fi
}

# Check that at least the domain argument is provided
if [[ $# -eq 1 ]]; then
    domain=$1
    for subdomain in "www" "lb-01" "web-01" "web-02"; do
        researcher "$domain" "$subdomain"
    done
elif [[ $# -eq 2 ]]; then
    domain=$1
    subdomain=$2
    researcher "$domain" "$subdomain"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

